        "name": "Headline",
        "settings": [{
          "id": "headline",
          "label": "Headline",
          "type": "text"
        }]
      },
      {
        "type": "description",
        "name": "description",
        "settings": [{
          "id": "description",
          "label": "Description",
          "type": "text"
        }]
      },
      {
        "type": "background",
        "name": "Background",
        "settings": [{
          "id": "background",
          "label": "Slide Background",
          "type": "image_picker"
        }]
      },
      {
        "type": "headline2",
        "name": "Headline2",
        "settings": [{
          "id": "headline2",
