<!-- {% section 'slide' %} -->

<div class="featured-slider jumbotron jumbotron-fluid"> 
    {% for block in section.blocks %}
      {% case block.type %}
      {% when 'background' and 'headline' and 'description' %}
        <div class="featured-slide" style="background: url('{{ block.settings.background | img_url: '1024x' }}')">
          <h1>{{ block.settings.headline }}</h1>
          <p>{{ block.settings.description }}</p>
        </div>
      {% when 'background2' and 'headline2' and 'description2' %}
        <div class="featured-slide" style="background: url('{{ block.settings.background2 | img_url: '1024x' }}')">
          <img src="{{ block.settings.background | img_url: '1024x' }}" />
          <h1>{{ block.settings.headline }}</h1>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endcase %}
    {% endfor %}
</div>

